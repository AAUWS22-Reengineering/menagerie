<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="rootPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="menagerie.gui.SplashController">
    <ImageView fx:id="backgroundImageView"/>
    <AnchorPane>
        <VBox alignment="CENTER" layoutX="100.0" layoutY="266.0" spacing="20" AnchorPane.bottomAnchor="150.0">
            <Label fx:id="titleLabel" text="Menagerie v1.5" BorderPane.alignment="CENTER">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
                <effect>
                    <DropShadow spread="0.2"/>
                </effect>
            </Label>
            <VBox alignment="CENTER">
                <ProgressBar prefWidth="600.0"/>
                <Label fx:id="statusLabel" text="Loading...">
                    <font>
                        <Font name="System Italic" size="12.0"/>
                    </font>
                </Label>
            </VBox>
        </VBox>
    </AnchorPane>
</StackPane>
