<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import menagerie.gui.grid.ImageGridView?>
<?import menagerie.gui.media.DynamicMediaView?>
<?import menagerie.gui.predictive.PredictiveTextField?>
<?import menagerie.gui.screens.ScreenPane?>
<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="menagerie.gui.MainController">
    <BorderPane fx:id="explorerRootPane" onKeyPressed="#explorerRootPaneOnKeyPressed"
                onKeyReleased="#explorerRootPaneOnKeyReleased" prefHeight="576.0" prefWidth="994.0">
        <center>
            <BorderPane>
                <center>
                    <StackPane>
                        <DynamicMediaView fx:id="previewMediaView"/>
                    </StackPane>
                </center>
                <bottom>
                    <VBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <Label fx:id="imageInfoLabel" text="Size: N/A - Res: N/A"/>
                        <Label fx:id="fileNameLabel" text="N/A" textOverrun="CENTER_ELLIPSIS"/>
                    </VBox>
                </bottom>
            </BorderPane>
        </center>
        <right>
            <BorderPane>
                <center>
                    <ImageGridView fx:id="imageGridView" horizontalCellSpacing="3" verticalCellSpacing="3"
                                   BorderPane.alignment="CENTER"/>
                </center>
                <top>
                    <VBox BorderPane.alignment="CENTER">
                        <HBox spacing="5.0">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <PredictiveTextField fx:id="searchTextField"
                                                 onAction="#searchTextFieldOnAction" promptText="Search"
                                                 HBox.hgrow="ALWAYS"/>
                        </HBox>
                        <BorderPane>
                            <right>
                                <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
                                    <Label fx:id="resultCountLabel" text="Results: 0"/>
                                    <Button mnemonicParsing="false" onAction="#searchButtonOnAction"
                                            text="Search"/>
                                </HBox>
                            </right>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <left>
                                <ToggleButton fx:id="listDescendingToggleButton" mnemonicParsing="false"
                                              selected="true" text="Descending" BorderPane.alignment="CENTER"/>
                            </left>
                        </BorderPane>
                    </VBox>
                </top>
                <bottom>
                    <HBox alignment="CENTER_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
                        <Label text="Errors and Warnings:"/>
                        <Button fx:id="showErrorsButton" mnemonicParsing="false"
                                onAction="#showErrorsButtonOnAction" text="0"/>
                    </HBox>
                </bottom>
            </BorderPane>
        </right>
        <left>
            <VBox prefWidth="200.0" BorderPane.alignment="CENTER">
                <ListView fx:id="tagListView" focusTraversable="false" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </ListView>
                <PredictiveTextField fx:id="editTagsTextField"
                                     onKeyPressed="#editTagsTextFieldOnKeyPressed" promptText="Edit tags">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </PredictiveTextField>
            </VBox>
        </left>
        <top>
            <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" onAction="#importFilesMenuButtonOnAction"
                              text="Import file(s)"/>
                    <MenuItem mnemonicParsing="false" onAction="#importFolderMenuButtonOnAction"
                              text="Import folder"/>
                    <SeparatorMenuItem/>
                    <MenuItem mnemonicParsing="false" onAction="#revertDatabaseMenuButtonOnAction"
                              text="Revert to backup"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <MenuItem mnemonicParsing="false" onAction="#settingsMenuButtonOnAction"
                              text="Settings"/>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                    <Menu mnemonicParsing="false" text="Slideshow">
                        <MenuItem mnemonicParsing="false" onAction="#slideShowSearchedMenuButtonOnAction"
                                  text="Searched"/>
                        <MenuItem mnemonicParsing="false" onAction="#slideShowSelectedMenuButtonOnAction"
                                  text="Selected"/>
                    </Menu>
                    <MenuItem mnemonicParsing="false" onAction="#viewTagsMenuButtonOnAction" text="Tags"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <MenuItem mnemonicParsing="false" onAction="#helpMenuButtonOnAction" text="Help"/>
                </Menu>
            </MenuBar>
        </top>
    </BorderPane>
    <StackPane fx:id="screensStackPane" pickOnBounds="false">
        <BorderPane fx:id="settings_rootPane" disable="true" onKeyPressed="#settings_rootPaneKeyPressed" opacity="0.0">
            <center>
                <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="700.0"
                            style="-fx-background-color: -fx-base;" BorderPane.alignment="CENTER">
                    <effect>
                        <DropShadow color="#00000080" spread="0.5"/>
                    </effect>
                    <bottom>
                        <HBox alignment="TOP_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <Button mnemonicParsing="false" onAction="#settings_acceptButtonOnAction" text="Accept"/>
                            <Button fx:id="settings_cancelButton" mnemonicParsing="false"
                                    onAction="#settings_cancelButtonOnAction" text="Cancel"/>
                        </HBox>
                    </bottom>
                    <center>
                        <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
                            <VBox spacing="5.0">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </padding>
                                <Label text="Settings:"/>
                                <Separator/>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label text="Default save folder:"/>
                                    <TextField fx:id="settings_defaultFolderTextField" editable="false"
                                               promptText="Folder will be asked for when saving regardless of settings"
                                               HBox.hgrow="ALWAYS"/>
                                    <Button mnemonicParsing="false"
                                            onAction="#settings_defaultFolderBrowseButtonOnAction" text="Browse"/>
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                </HBox>
                                <Separator/>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <CheckBox fx:id="settings_autoImportFolderCheckBox"
                                              onAction="#settings_autoImportFolderCheckBoxOnAction"
                                              text="Auto-import folder"/>
                                    <CheckBox fx:id="settings_autoImportFromFolderToDefaultCheckBox"
                                              mnemonicParsing="false"
                                              text="Move from folder to default folder before importing"/>
                                </HBox>
                                <HBox>
                                    <padding>
                                        <Insets left="25.0"/>
                                    </padding>
                                    <TextField fx:id="settings_importFromFolderTextField" editable="false"
                                               promptText="Folder to auto-import images from" HBox.hgrow="ALWAYS"/>
                                    <Button fx:id="settings_importFromFolderBrowseButton" mnemonicParsing="false"
                                            onAction="#settings_importFromFolderBrowseButtonOnAction" text="Browse"/>
                                </HBox>
                                <CheckBox fx:id="settings_autoImportWebCheckbox"
                                          text="Auto-import from web when drag-dropped"/>
                                <Separator/>
                                <Label text="On file import:"/>
                                <VBox spacing="5.0">
                                    <padding>
                                        <Insets left="25.0"/>
                                    </padding>
                                    <CheckBox fx:id="settings_computeMDCheckbox" text="Compute MD5"/>
                                    <CheckBox fx:id="settings_computeHistCheckbox" text="Compute Histogram"/>
                                </VBox>
                                <Separator/>
                                <Label text="Duplicate finding:"/>
                                <VBox spacing="5.0">
                                    <padding>
                                        <Insets left="25.0"/>
                                    </padding>
                                    <CheckBox fx:id="settings_duplicateComputeMD5Checkbox"
                                              text="Compute MD5s before matching"/>
                                    <CheckBox fx:id="settings_duplicateComputeHistCheckbox"
                                              text="Compute Histograms before matching"/>
                                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                                        <Label text="Histogram confidence level:"/>
                                        <TextField fx:id="settings_histConfidenceTextField"
                                                   promptText="0.95 suggested"/>
                                    </HBox>
                                    <CheckBox fx:id="settings_duplicateConsolidateTagsCheckbox"
                                              text="Consolidate tags on delete"/>
                                    <CheckBox fx:id="settings_duplicateCompareBlackAndWhiteCheckbox"
                                              text="Compare black and white histograms (poor accuracy)"/>
                                </VBox>
                                <Separator/>
                                <Label text="Video Previews:"/>
                                <VBox spacing="5.0">
                                    <padding>
                                        <Insets left="25.0"/>
                                    </padding>
                                    <CheckBox fx:id="settings_muteVideoCheckBox" mnemonicParsing="false" text="Mute"/>
                                    <CheckBox fx:id="settings_repeatVideoCheckBox" mnemonicParsing="false"
                                              text="Repeat"/>
                                </VBox>
                                <Separator prefWidth="200.0"/>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label text="Explorer Grid row width:"/>
                                    <ChoiceBox fx:id="settings_gridWidthChoiceBox"/>
                                </HBox>
                                <Separator/>
                                <Label text="Database (changes will be applied on restart):"/>
                                <VBox spacing="5.0">
                                    <padding>
                                        <Insets left="25.0"/>
                                    </padding>
                                    <BorderPane>
                                        <left>
                                            <Label text="URL:" BorderPane.alignment="CENTER"/>
                                        </left>
                                        <center>
                                            <Label text="Username:" BorderPane.alignment="CENTER"/>
                                        </center>
                                        <right>
                                            <Label text="Password:" BorderPane.alignment="CENTER"/>
                                        </right>
                                    </BorderPane>
                                    <HBox spacing="5.0">
                                        <TextField fx:id="settings_dbURLTextField" promptText="~/menagerie"
                                                   HBox.hgrow="ALWAYS"/>
                                        <TextField fx:id="settings_dbUserTextField" promptText="sa"
                                                   HBox.hgrow="ALWAYS"/>
                                        <TextField fx:id="settings_dbPassTextField" promptText="[Empty]"
                                                   HBox.hgrow="ALWAYS"/>
                                    </HBox>
                                    <CheckBox fx:id="settings_backupDatabaseCheckBox" mnemonicParsing="false"
                                              text="Back up database on startup"/>
                                </VBox>
                            </VBox>
                        </ScrollPane>
                    </center>
                </BorderPane>
            </center>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </padding>
        </BorderPane>
        <BorderPane fx:id="duplicate_rootPane" disable="true" onKeyPressed="#duplicate_rootPaneOnKeyPressed"
                    opacity="0.0" style="-fx-background-color: -fx-base;">
            <bottom>
                <VBox spacing="5.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <BorderPane>
                        <center>
                            <Label fx:id="duplicate_similarityLabel" text="0% Match" BorderPane.alignment="CENTER"/>
                        </center>
                        <left>
                            <HBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
                                <Button mnemonicParsing="false" onAction="#duplicate_leftDeleteButtonOnAction"
                                        text="Delete"/>
                                <Label fx:id="duplicate_leftInfoLabel" text="Size: N/A - Res: N/A"/>
                            </HBox>
                        </left>
                        <right>
                            <HBox alignment="CENTER_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
                                <Label fx:id="duplicate_rightInfoLabel" text="Size: N/A - Res: N/A"/>
                                <Button mnemonicParsing="false" onAction="#duplicate_rightDeleteButtonOnAction"
                                        text="Delete"/>
                            </HBox>
                        </right>
                    </BorderPane>
                    <BorderPane>
                        <center>
                            <HBox alignment="CENTER" spacing="5.0">
                                <TextField fx:id="duplicate_leftPathTextField" editable="false" text="Path 1"
                                           HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" onAction="#duplicate_prevPairButtonOnAction"
                                        text="&lt;-"/>
                                <Button mnemonicParsing="false" onAction="#duplicate_closeButtonOnAction" text="Close"/>
                                <Button mnemonicParsing="false" onAction="#duplicate_nextPairButtonOnAction"
                                        text="-&gt;"/>
                                <TextField fx:id="duplicate_rightPathTextField" editable="false" text="Path 2"
                                           HBox.hgrow="ALWAYS"/>
                            </HBox>
                        </center>
                    </BorderPane>
                </VBox>
            </bottom>
            <center>
                <SplitPane dividerPositions="0.5" onMouseEntered="#duplicate_imagesPaneMouseEntered"
                           onMouseExited="#duplicate_imagesPaneMouseExited" BorderPane.alignment="CENTER">
                    <StackPane>
                        <DynamicMediaView fx:id="duplicate_leftMediaView"/>
                        <BorderPane pickOnBounds="false">
                            <right>
                                <ListView fx:id="duplicate_leftTagListView" opacity="0.75" prefWidth="200.0"
                                          BorderPane.alignment="CENTER"/>
                            </right>
                        </BorderPane>
                    </StackPane>
                    <StackPane>
                        <DynamicMediaView fx:id="duplicate_rightMediaView"/>
                        <BorderPane pickOnBounds="false">
                            <left>
                                <ListView fx:id="duplicate_rightTagListView" opacity="0.75" prefWidth="200.0"
                                          BorderPane.alignment="CENTER"/>
                            </left>
                        </BorderPane>
                    </StackPane>
                </SplitPane>
            </center>
        </BorderPane>
        <BorderPane fx:id="errors_rootPane" disable="true" onKeyPressed="#errorsPane_rootKeyPressed" opacity="0.0">
            <right>
                <VBox prefWidth="600.0" style="-fx-background-color: -fx-base;" BorderPane.alignment="CENTER">
                    <effect>
                        <DropShadow spread="0.5"/>
                    </effect>
                    <BorderPane>
                        <left>
                            <Label text="Errors and warnings:" BorderPane.alignment="CENTER"/>
                        </left>
                        <right>
                            <Button mnemonicParsing="false" onAction="#errors_closeButtonOnAction" text="X"
                                    BorderPane.alignment="CENTER"/>
                        </right>
                    </BorderPane>
                    <Separator prefWidth="200.0"/>
                    <ListView fx:id="errors_listView" VBox.vgrow="ALWAYS"/>
                    <HBox alignment="TOP_RIGHT">
                        <Button mnemonicParsing="false" onAction="#errors_dismissAllButtonOnAction" text="Dismiss All"/>
                    </HBox>
                </VBox>
            </right>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </padding>
        </BorderPane>
    </StackPane>
    <ScreenPane fx:id="screenPane" />
</StackPane>
