        </bottom>
        <center>
            <SplitPane dividerPositions="0.5" onMouseEntered="#duplicateImagesPaneMouseEntered" onMouseExited="#duplicateImagesPaneMouseExited" BorderPane.alignment="CENTER">
                <StackPane>
                    <DynamicImageView fx:id="duplicateLeftImageView" pickOnBounds="true" preserveRatio="true" />
                    <BorderPane prefHeight="200.0" prefWidth="200.0">
                        <right>
                            <ListView fx:id="duplicateLeftTagListView" opacity="0.75" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                        </right>
                    </BorderPane>
                </StackPane>
                <StackPane>
                    <DynamicImageView fx:id="duplicateRightImageView" pickOnBounds="true" preserveRatio="true" />
                    <BorderPane prefHeight="200.0" prefWidth="200.0">
                        <left>
                            <ListView fx:id="duplicateRightTagListView" opacity="0.75" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                        </left>
                    </BorderPane>
                </StackPane>
            </SplitPane>
        </center>
    </BorderPane>
    <BorderPane fx:id="slideshowPane" disable="true" onKeyPressed="#slideshowPaneOnKeyPressed" opacity="0" style="-fx-background-color: -fx-base;">
