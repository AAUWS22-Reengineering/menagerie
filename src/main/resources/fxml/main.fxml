                    </left>
                    <right>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
                            <Label fx:id="duplicateRightInfoLabel" text="Size: N/A - Res: N/A" />
                            <Button mnemonicParsing="false" onAction="#duplicateRightDeleteButtonOnAction" text="Delete" />
                        </HBox>
                    </right>
                </BorderPane>
                <BorderPane>
                    <center>
                        <HBox alignment="CENTER" spacing="5.0">
                            <TextField fx:id="duplicateLeftPathTextField" editable="false" text="Path 1" HBox.hgrow="ALWAYS" />
                            <Button mnemonicParsing="false" onAction="#duplicatePrevPairButtonOnAction" text="&lt;-" />
