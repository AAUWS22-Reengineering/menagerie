    </BorderPane>
    <BorderPane fx:id="duplicatePane" disable="true" onKeyPressed="#duplicatePaneOnKeyPressed" opacity="0.0" style="-fx-background-color: -fx-base;">
        <bottom>
            <VBox spacing="5.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
                <BorderPane>
                    <center>
                        <Label fx:id="duplicateSimilarityLabel" text="0% Match" BorderPane.alignment="CENTER" />
                    </center>
                    <left>
                        <HBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
                            <Button mnemonicParsing="false" onAction="#duplicateLeftDeleteButtonOnAction" text="Delete" />
                            <Label fx:id="duplicateLeftInfoLabel" text="Size: N/A - Res: N/A" />
